# LTA top-level makefile
#

# Default location for all SDK libraries
include $(SDK)/make/libpath.mk

# Default include path
LTA_INCLUDE_PATH = -I$(BCMLTA)/include

# include autogenerated make include fragments
-include $(BCMLTA)/*/inc.mk

# finally, the standard support libraries
LTA_INCLUDE_PATH += \
	-I$(BCMLRD)/include \
	-I$(BCMLTD)/include \
	-I$(BCMDRD)/include \
	-I$(SHR)/include \
	-I$(BSL)/include \
	-I$(SAL)/include

# Import preprocessor flags avoiding include duplicates
TMP_SDK_CPPFLAGS := $(filter-out $(LTA_INCLUDE_PATH),$(SDK_CPPFLAGS))
TMP_SDK_CPPFLAGS += $(LTA_INCLUDE_PATH)
override SDK_CPPFLAGS := $(TMP_SDK_CPPFLAGS)
export SDK_CPPFLAGS

include $(SDK)/make/config.mk

include $(BCMLTA)/targets.mk

.PHONY: all $(CLEAN_TARGETS) $(LTA_TARGETS)

ifneq (,$(filter $(MAKECMDGOALS),$(CLEAN_TARGETS)))
SDK_CLEAN = $(MAKECMDGOALS)
endif

all:
	$(MAKE) ltalibs

info:
	@echo targets: $(LTA_TARGETS)
	@echo include: $(LTA_INCLUDE_PATH)

ltalibs: $(LTA_TARGETS)

$(LTA_TARGETS):
	@${ECHO} Processing BCMLTA subdirectory $@
	$(MAKE) -C $@ $(SDK_CLEAN)

$(CLEAN_TARGETS):: $(LTA_TARGETS)

# Common developer targets
include $(SDK)/make/devtools.mk
