# Helper makefile for integrating the Framer library into  the SDK builds.
#

# Map framer library name to SDK library name
ifeq (,$(lib))
lib = $(LIBNAME)
endif

# Duplicate framer rule for C source compilation
$(BLDDIR)/%.$(OBJSUFFIX): %.c $(BLDDIR)/.tree
	@$(ECHO) 'Compiling $(LOCALDIR)/$<'
	$(Q)$(CC) $(CPPFLAGS) $(CFLAGS) -c $< -o $@

# Include SDK library rules to support Linux shared library builds
include $(SDK)/make/Make.lib
